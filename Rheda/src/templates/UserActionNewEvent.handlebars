<h3>{{_t 'Create new event'}}</h3>
<br>
{{#error}}
  <div class="alert alert-danger" role="alert">{{error}}</div>
{{/error}}
{{#success}}
  <div class="alert alert-success" role="success">{{success}}</div>
{{/success}}
{{^critical}}
  <div class="row">
    <div class="col-6">
      <form action="" method="post" class="well">
        <input type="hidden" name="save" value="1"/>

        <div class="form-group">
          <label for="title">{{_t 'Title'}}</label>
          <input type="text" class="form-control{{#error_title}} is-invalid{{/error_title}}" id="title"
                 value="{{title}}"
                 name="title">
          {{#error_title}}
            <div class="invalid-feedback">{{error_title}}</div>
          {{/error_title}}
          {{^error_title}}
            <small id="titleHelp" class="form-text text-muted">{{_t "Please enter title for this event with at least 4 characters."}}</small>
          {{/error_title}}
        </div>

        <div class="form-group">
          <label for="description">{{_t 'Description'}}</label>
          <textarea class="form-control{{#error_description}} is-invalid{{/error_description}}" id="description"
                    name="description">{{description}}</textarea>
          {{#error_description}}
            <div class="invalid-feedback">{{error_description}}</div>
          {{/error_description}}
          {{^error_description}}
            <small id="descriptionHelp" class="form-text text-muted">{{_t "Enter short description. Markdown syntax is supported."}}</small>
          {{/error_description}}
        </div>

        {{#isTournament}}
          <div class="form-group">
            <label for="duration">{{_t 'Session duration'}}</label>
            <input type="number" class="form-control{{#error_duration}} is-invalid{{/error_duration}}" id="duration"
                   value="{{duration}}"
                   name="duration">
            {{#error_duration}}
              <div class="invalid-feedback">{{error_duration}}</div>
            {{/error_duration}}
            {{^error_duration}}
              <small id="durationHelp" class="form-text text-muted">{{_t "Choose single session duration in minutes (timer initial value). Default is 90."}}</small>
            {{/error_duration}}
          </div>
        {{/isTournament}}

        <div class="form-group">
          <label for="ruleset">{{_t 'Ruleset'}}</label>
          <select class="form-control{{#error_ruleset}} is-invalid{{/error_ruleset}}" id="ruleset" name="ruleset">
            {{#available_rulesets}}
              <option value="{{ident}}"{{#selected}} selected="selected"{{/selected}}>{{name}}</option>
            {{/available_rulesets}}
          </select>
          {{#error_ruleset}}
            <div class="invalid-feedback">{{error_ruleset}}</div>
          {{/error_ruleset}}
          {{^error_ruleset}}
            <small id="rulesetHelp" class="form-text text-muted">{{_t "Select basic ruleset for event."}}</small>
          {{/error_ruleset}}
        </div>

        <div class="form-group">
          <label for="timezone">{{_t 'Timezone'}}</label>
          <select class="form-control{{#error_timezone}} is-invalid{{/error_timezone}}" id="timezone" name="timezone">
            {{#available_timezones}}
              <option value="{{ident}}"{{#selected}} selected="selected"{{/selected}}>{{ident}}</option>
            {{/available_timezones}}
          </select>
          {{#error_timezone}}
            <div class="invalid-feedback">{{error_timezone}}</div>
          {{/error_timezone}}
          {{^error_timezone}}
            <small id="timezoneHelp" class="form-text text-muted">{{_t "All dates and times will be displayed according to selected timezone."}}</small>
          {{/error_timezone}}
        </div>

        {{^isTournament}}
          <div class="form-group">
            <label for="seriesLength">{{_t 'Series'}}</label>
            <input type="number" class="form-control{{#error_seriesLength}} is-invalid{{/error_seriesLength}}" id="seriesLength"
                   value="{{seriesLength}}"
                   name="seriesLength">
            {{#error_seriesLength}}
              <div class="invalid-feedback">{{error_seriesLength}}</div>
            {{/error_seriesLength}}
            {{^error_seriesLength}}
              <small id="seriesLengthHelp" class="form-text text-muted">{{_t "Set length of game series. Separate rating table for series will be available."}}</small>
            {{/error_seriesLength}}
          </div>

          <div class="form-group">
            <label for="minGames">{{_t 'Minimal games count'}}</label>
            <input type="number" class="form-control{{#error_minGames}} is-invalid{{/error_minGames}}" id="minGames"
                   value="{{minGames}}"
                   name="minGames">
            {{#error_minGames}}
              <div class="invalid-feedback">{{error_minGames}}</div>
            {{/error_minGames}}
            {{^error_minGames}}
              <small id="minGamesHelp" class="form-text text-muted">{{_t "If this is non-zero N, only those who played more than N games will be shown in rating table."}}</small>
            {{/error_minGames}}
          </div>
        {{/isTournament}}

        {{#isTournament}}
          <div class="form-group">
            <label for="isTeam">{{_t 'Team tournament'}}</label>
            <input type="checkbox" class="form-control{{#error_isTeam}} is-invalid{{/error_isTeam}}" id="isTeam"
              {{#isTeam}}checked="checked"{{/isTeam}}
              name="isTeam">
            {{^error_isTeam}}
              <small id="isTeamHelp" class="form-text text-muted">{{_t "Choose this for separate team rating"}}</small>
            {{/error_isTeam}}
          </div>
        {{/isTournament}}

        <div class="form-group">
          <label for="isPrescripted">{{_t 'Predefined seating'}}</label>
          <input type="checkbox" class="form-control{{#error_isPrescripted}} is-invalid{{/error_isPrescripted}}" id="isPrescripted"
                 {{#isPrescripted}}checked="checked"{{/isPrescripted}}
                 name="isPrescripted">
          {{^error_isPrescripted}}
            <small id="isPrescriptedHelp" class="form-text text-muted">{{_t "Choose this if you want to define your own custom seating for tournament by hand"}}</small>
          {{/error_isPrescripted}}
        </div>

        <button type="submit" class="btn btn-primary">{{_t 'Create event'}}</button>
      </form>
      <hr/>
    </div>
  </div>
{{/critical}}
